<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <title>{% block title %}Which Lineup?{% endblock %}</title>
    {% block stylesheets %}
      {% stylesheets
        'lib/bootstrap-dist/css/bootstrap.min.css'
        'css/ie10-viewport-bug-workaround.css'
        'css/sticky-footer-navbar.css'%}
        <link href="{{ asset_url }}" rel="stylesheet" />
      {% endstylesheets %}

      <link rel="stylesheet" type="text/css" href="{{ asset('bundles/bmatznerfontawesome/css/font-awesome.min.css') }}" />
        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    {% endblock %}
  </head>
  <body>
    {% block navbar %}
      <!-- Fixed navbar -->
      <nav class="navbar navbar-default navbar-static-top">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('homepage') }}">Which Lineup?</a>
          </div>

          <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              {% set route = app.request.getPathInfo %}
              <li {{ route == '/' ? 'class="active"' }}><a href="{{ path('homepage') }}">Home</a></li>
              <li {{ route starts with '/how-it-works' ? 'class="active"' }}><a href="{# path('how_it_works') #}">How It Works</a></li>
              <li {{ route starts with '/create-account' ? 'class="active"' }}><a href="{# path('create_account') #}">Create an Account</a></li>
              <li><a href="http://www.baseballtourneys.com/">Image Cred</a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </nav>
    {% endblock %}

    {% block body %}{% endblock %}

    {% block footer %}
      <footer class="footer">
        <div class="container">
          <p class="text-muted text-center">
            <a href="{# path('contact_us') #}">Contact Us</a> |
            <a href="{# path('faq') #}">FAQ</a> |
            <a href="{# path('clients') #}">Clients</a> |
            <a href="{# path('terms_and_conditions') #}">Terms and Conditions</a>
          </p>
          <p class="text-muted text-center">2016 Which Lineup?, Inc. All Rights Reserved</p>
        </div>
      </footer>
    {% endblock %}

    {% block javascripts %}
      {% javascripts
        'lib/jquery/jquery-2.2.4.min.js'
        'lib/bootstrap-dist/js/bootstrap.min.js'
        'js/ie10-viewport-bug-workaround.js' %}

        <script src="{{ asset_url }}"></script>
      {% endjavascripts %}
    {% endblock %}
  </body>
</html>
