{% extends 'base.html.twig' %}

{% block title %}Which Lineup? {{ team.getName() }}{% endblock %}

{% block body %}
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>{{ team.getName() }}</h1>
      <table class="table table-striped">
        <thead>
          <th>Name</th>
          <th>At Bats</th>
          <th>Batting Average</th>
          <th>Slugging Average</th>
          <th>Actions</th>
        </thead>
        <tbody>
          {% for player in team.getPlayers() %}
            <tr>
              <td>{{ player.getName() }}</td>
              <td>{{ player.getAtbats()|length }}</td>
              <td>{{ player.getBattingAverage() }}</td>
              <td>{{ player.getSluggingAverage() }}</td>
              <td><button class="btn btn-primary">Manage</button> <button class="btn btn-danger">Delete</button></td>
            </tr>
          {% endfor %}
        </tbody>
        <form method="post">
        <tr>
          <td>
            {{ form_widget(playerForm.name,
              { 'attr':
                {'class': 'form-control'}
              })
            }}
          </td>
          <td>0</td>
          <td>1.000</td>
          <td>1.000</td>
          <td>
            {{ form_rest(playerForm) }}
            <button type="submit" class="btn btn-success">Add Player</button>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
{% endblock %}
