<div class="container">
  <div class="row">
    {% if app.request.hasPreviousSession %}
        {% for type, messages in app.session.flashbag.all() %}
          <div class="col-md-10 col-md-offset-1 col-xs-12 text-center alert alert-info">
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
          </div>
        {% endfor %}
    {% endif %}
  </div>
</div>

