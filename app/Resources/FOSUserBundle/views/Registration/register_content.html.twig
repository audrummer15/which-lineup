{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
  <div class="container"> <!-- main content container -->
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Create an Account</h3>
          </div>

          <div class="panel-body">
            <div class="col-sm-10 col-sm-offset-1">
              <form action="{{ path('fos_user_registration_register') }}" method="post" class="fos_user_registration_register">
                <div class="form-group">
                  {% if form_errors(form) %}
                    <div class="alert alert-danger text-center">
                      <p class="bg-danger">{{ form_errors(form) }}</p>
                    </div>
                  {% endif %}
                  {% if form_errors(form.email) %}
                    <div class="alert alert-danger text-center">
                      <p class="bg-danger">{{ form_errors(form.email) }}</p>
                    </div>
                  {% endif %}
                  {% if form_errors(form.plainPassword.first) %}
                    <div class="alert alert-danger text-center">
                      <p class="bg-danger">{{ form_errors(form.plainPassword.first) }}</p>
                    </div>
                  {% endif %}
                </div>
                <div class="form-group">
                  {{ form_label(form.email) }}

                  {{ form_widget(form.email,
                    { 'attr':
                      {'class': 'form-control'}
                    })
                  }}
                </div>

                <div class="form-group">
                  {{ form_label(form.plainPassword.first) }}

                  {{ form_widget(
                    form.plainPassword.first,
                      { 'attr':
                        {'class': 'form-control'}
                      })
                  }}
                </div>

                <div class="form-group">
                  {{ form_label(form.plainPassword.second) }}

                  {{ form_widget(
                    form.plainPassword.second,
                      { 'attr':
                        {'class': 'form-control'}
                      })
                  }}
                </div>

                {{ form_widget(form._token) }}

                <div>
                    <input type="submit" class="btn btn-primary" value="{{ 'registration.submit'|trans }}" />
                </div>
              </form>

            </div>
          </div>
        </div>
      </div>
    </div> <!-- end first-row -->
  </div> <!-- main content container -->

{% endblock %}
